# ==========================================
# M Supplies - Environment Configuration
# ==========================================

# ============ BACKEND ============

# MongoDB
MONGO_URL=mongodb://localhost:27017
DB_NAME=msupplies_db

# JWT Authentication
JWT_SECRET=your-secret-key-change-in-production-use-strong-random-string
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Application URLs
APP_URL=https://shop.m-supplies.sg
API_URL=https://shop.m-supplies.sg/api

# CORS (comma-separated origins)
CORS_ORIGINS=https://shop.m-supplies.sg,https://www.m-supplies.sg

# Cookie Configuration
COOKIE_DOMAIN=.m-supplies.sg
COOKIE_SECURE=true
COOKIE_SAMESITE=lax

# Stripe Payment
STRIPE_PUBLIC_KEY=pk_test_your_stripe_publishable_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Email (SendGrid)
SENDGRID_API_KEY=SG.your_sendgrid_api_key
SENDER_EMAIL=orders@m-supplies.sg

# Google OAuth (Optional)
GOOGLE_CLIENT_ID=your_google_client_id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your_google_client_secret

# File Storage
UPLOAD_DIR=./uploads
MAX_UPLOAD_MB=10

# Business Settings
GST_PERCENT=9
DEFAULT_CURRENCY=SGD

# ============ FRONTEND ============

# Backend API URL
REACT_APP_BACKEND_URL=https://shop.m-supplies.sg

# ============ DEVELOPMENT ============
# For local development, use:
# APP_URL=http://localhost:3000
# API_URL=http://localhost:3000/api
# REACT_APP_BACKEND_URL=http://localhost:3000
# CORS_ORIGINS=http://localhost:3000
# COOKIE_DOMAIN=localhost
# COOKIE_SECURE=false
